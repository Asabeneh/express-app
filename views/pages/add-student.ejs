<%- include('../partials/head') %>

<body>
  <%- include('../partials/navbar') %>
  <div class="wrapper">
    <main>
      <div class="main-wrapper">

        <form action="/api/v.1.0/students" method="POST">
          <h3 class="form-title">Add Student</h3>
          <div class="form-group">
            <label for="firstName">First Name</label>
            <input
              id="firstName"
              type="text"
              name="firstName"
              placeholder="First name" />

          </div>
          <div class="form-group">
            <label for="lastName">Last Name</label>
            <input
              id="lastName"
              type="text"
              name="lastName"
              placeholder="Last name" />

          </div>
          <div class="form-group">
            <label for="country">Country</label>
            <input id="country" type="text" name="country" placeholder="Country" />

          </div>

          <div class="form-group">
            <label for="age">Age</label>
            <input type="text" id="age" name="age" placeholder="Age" />

          </div>

          <div class="form-group">
            <label for="skills">Skills</label>
            <textarea type="text" id="skills" name="skills" cols="120" rows="5"
              value="Skills separated by comma..."></textarea>

          </div>
          <div class="form-group">
            <label for="bio">Your bio</label>
            <textarea id="bio" name="bio" cols="120" rows="10" placeholder="Bio"></textarea>

          </div>


          <button class="btn" type="submit" id="submit-button">Add</button>
        </form>

      </div>
    </main>


  </div>
  <%- include('../partials/footer') %>
</body>

</html>